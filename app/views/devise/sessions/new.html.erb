<div class="container-fluild"  >
  <div class="login">

      <h2>Login</h2>

       <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
       <div><%= f.email_field :email,placeholder: "Email",class: "input-large" %></div>

       <div><%= f.password_field :password,placeholder: "Password",class: "input-large" %></div>
       
       <% if devise_mapping.rememberable? -%>
      <div class="loginRemMe"> <label class="loginLabel"> <span class="loginChebox"><%= f.check_box :remember_me %></span>Remember me? </label></div>
      
      <% end -%>

       <div><%= f.submit "Login",class: "btn btn-login btn-primary" %></div>
       <% end %>

      <h5><%= render "devise/shared/links" %></h5>
  </div>
</div>