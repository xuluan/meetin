<p id="notice"><%= notice %></p>

</div>

  <strong><%= current_user.username %>,</strong>
  <% if @member&& @member.status  %>

     <span>you have already joined this meeting</span>
     <p>If you want to exit, please click<span>
     
      <%= link_to( "Exit", params.merge(:member => "exit"), :confirm => "Are you sure?") %>
      </span>

     </p>

  <% else %>
     <span>you have not joined this meeting</span>
<p>If you want to join, please click <span>

      <%= link_to( "Join", params.merge(:member => "join")) %>
      </span>
</p>
  <% end %>
</div>


<p>
  <b>Title:</b>
  <%= @meeting.title %>
</p>

<p>
  <b>Manager:</b>
  <%= @meeting.manager.username %>
</p>


<p>
  <b>Agenda:</b>
  <%= raw @meeting.agenda_html %>
</p>

<p>
  <b>Role list:</b>
  <%= @meeting.role_list %>
</p>

<p>
  <b>Member list:</b>
  <%= @meeting.member_list %>
</p>

<p>
  <b>Started at:</b>
  <%= @meeting.started_at %>
</p>

<p>
  <b>Location:</b>
  <%= @meeting.location %>
</p>

  <% if current_user.operate? (@meeting)  %>
  <%= render :partial => "operation" %>
  <% end %>

<%= link_to 'Refresh', @meeting %>

