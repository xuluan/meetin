<%= simple_form_for(@meeting) do |f| %>
  <%= f.error_notification %>
 <!--<div class="form-inputs">-->
    <form>
      <%= f.input :title, :placeholder=>"Ex: TM_08292012",:input_html=>{:class => "span5"} %>

      <%= f.input :intro, label: "Intro", :placeholder=>"Brief introduction of the meeting",:input_html=>{:class => "span5"} %>

        <%= f.fields_for :roles do |builder| %>
          <%= render 'role_fields', f: builder %>
        <% end %>

        <% if @meeting_template %>
          <% @meeting_template.roles.each do |role| %>
            <% new_object = @meeting.roles.new(name: role.name, meeting_id: @meeting.id) %>

            <%= f.fields_for :roles, new_object do |builder| %>
              <%= render 'role_fields', f: builder %>
            <% end %>
          <% end %>
        <% end %>
        <%= link_to_add_fields "Add Role", f, :roles %>

      <% if @meeting.new_record? %>
        <div class=" formGroup">
          <%= f.input :member_list, label: "Invatation List", :placeholder=>"List member emails,separated by ,",
          :input_html=>{:class => "span5 formInline"} %>
        </div>
      <% else %>
      <div class=" formGroup">
          <%= f.label "#{@meeting.member_list}", :input_html=>{:class => "span5 formInline"} %>
        </div>
      <% end %>

      <%= f.fields_for :members do |builder| %>
        <%= render 'member_fields', f: builder %>
      <% end %>

        <% if @meeting_template %>
          <% @meeting_template.members.each do |member| %>
            <% new_object = @meeting.members.new(user_id: member.user_id, meeting_id: @meeting.id) %>

            <%= f.fields_for :members, new_object do |builder| %>
              <%= render 'member_fields', f: builder %>
            <% end %>
          <% end %>
        <% end %>

      <div class="formInline" >
        <%= f.input :started_at %>
      </div>

      <%= f.input :location,:placeholder=>"Ex: 12808 West Airport Suite 260. Sugar Land TX 77478", :input_html=>{:class => "span5"} %>

      <%= f.button :submit %>
  </form>

 <!-- <div class="form-actions">-->
<% end %>
